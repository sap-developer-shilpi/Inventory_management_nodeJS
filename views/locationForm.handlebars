<div class="loc_form">
    <form method="post" action="/locations/create" id="locForm">
        <div class="row">
            <div class="col">
                <label>Location Name</label>
                <input type="text" class="form-control" name="locName" value="{{locName}}">
            </div>
            <div class="col">
                <label>Location Code</label>
                <input type="text" class="form-control" name="locCode">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Representative Name</label>
                <input type="text" class="form-control" name="representative">
            </div>
            <div class="col">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="col">
                <label>Phone</label>
                <input type="tel" class="form-control" name="phone">
            </div>
        </div>
        <hr>
        <h5> Address: </h5>
        <div class="row">
            <div class="col">
                <label>Street</label>
                <input type="tel" class="form-control" name="street">
            </div>
            <div class="col">
                <label>City</label>
                <input type="text" class="form-control" name="city">
            </div>
        </div>
        <div class="row">

            <div class="col">
                <label>State</label>
                <input type="text" class="form-control" name="state">
            </div>
            <div class="col">
                <label>Zip Code</label>
                <input type="number" class="form-control" name="zipCode">
            </div>
            <div class="col">
                <label>Country</label>
                <input type="text" class="form-control" name="country">
            </div>
        </div>
        <div class="row" style="margin-left: 35%;">
            <button type="button" class="btn btn-primary" style="margin: 2% 2%;" onclick="postFormAsMultiData()">Send</button>
            <button type="reset" class="btn btn-primary" style="margin: 2% 2%;">Reset</button>
        </div>

    </form>

</div>
<script>
    function postFormAsMultiData(){
        //"Content-Type" : "application/x-www-form-urlencoded"
        var form = new FormData(document.getElementById('locForm'));
        const data = new URLSearchParams();
        for (const pair of form) {
            data.append(pair[0], pair[1]);
        }
        fetch("/locations/create", {
            method: "POST",
            body: data
        }).then((resp) => resp.text()).then((data) => {
            console.log(data);
            $("#main").html(data);
        });
    }
    </script>